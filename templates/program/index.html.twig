{% extends 'base.html.twig' %}

{% block body %}
<h1>Toutes les séries de la table program : </h1>
    {% for program in programs %}
        <div>
            <a href="{{ path('program_show', {program : program.id})}}"><h2>{{ loop.index }} / {{ program.title }}</h2></a>
            <strong>Catégorie : {{ program.category.name }}</strong>
            <p>{{ program.summary }}</p>
        </div>
    {% else %}
        Aucune série trouvée.
    {% endfor %}

    <a href="{{ path('app_index') }}">
        Retour à l'accueil
    </a>
{% endblock %}
