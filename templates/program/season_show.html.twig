{% extends 'base.html.twig' %}

{% block title %}{{ program.title }}{% endblock %}

{% block body %}
    <div class="media">
        <h1 class="mt-0">{{ program.title }} - Saison n°{{ season.number }}</h1>
        <p>Date de sortie : {{ season.year }}</p>
    </div>
    <div>
        <ul>
        {% for episode in episodes %}

            <li>
                <div>
                    <a href="{{ path('program_episode_show', {slug : program.slug, season : season.id, slug : episode.slug})}}"><strong>Episode n°{{ episode.number }}</strong></a>
                    <p>{{ episode.title }}</p>
                </div>
            </li>

        {% endfor %}
        </ul>
    </div>

    <a href="{{ path('program_show', {slug : program.slug}) }}">
        Retour à la liste des saisons
    </a>
    <br>
    <a href="{{ path('season_edit', {'id': season.id}) }}">Modifier la saison</a>

    {{ include('season/_delete_form.html.twig') }}
{% endblock %}